<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/primaryColor"
    android:padding="20dp">

    <TextView
        android:id="@+id/numberDialogNazev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/primaryText"
        android:textSize="20sp"
        android:textStyle="bold" />

    <NumberPicker
        android:id="@+id/dialogNumberPicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberDialogNazev"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:contextClickable="false"
        android:theme="@style/AppTheme.Picker" />

    <Button
        android:id="@+id/numberDialogNastavitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogNumberPicker"
        android:layout_alignStart="@+id/dialogNumberPicker"
        android:layout_alignEnd="@+id/dialogNumberPicker"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_border"
        android:text="Nastavit"
        android:textColor="@color/black" />

</RelativeLayout>